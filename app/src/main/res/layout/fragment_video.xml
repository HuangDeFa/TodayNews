<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.huangdefa.todaynews.Fragment.VideoFragment">
    <com.huangdefa.todaynews.Widget.HorizontalTabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video_page_header_tab"
        android:layout_below="@id/main_page_search_header"
        >

    </com.huangdefa.todaynews.Widget.HorizontalTabLayout>
    <com.huangdefa.todaynews.Widget.SuperViewpager
        android:layout_below="@id/video_page_header_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video_page_content_viewpager"
        />
</RelativeLayout>
